#include <stdio.h>

int factorial(int n) {
    if (n == 0) {
        return 1;
    } else {
        return n * factorial(n-1);
    }
}

int main() {
    int num, result;
    printf("Enter a positive integer: ");
    scanf("%d", &num);

    result = factorial(num);
    printf("Factorial of %d is %d", num, result);
    return 0;
}


output:

Enter a positive integer: 5
Factorial of 5 is 120
